<div class="min-h-screen py-32">
    <p class="text-MyYellow text-3xl font-semibold w-fit mx-auto mb-10">TOYS LIST</p>
    <div class="relative overflow-x-auto w-11/12 lg:w-4/5 mx-auto rounded-t-lg">
        <table class="w-full text-sm text-left">
            <thead class="text-xs text-white uppercase bg-gray-700">
                <tr class="">
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Name
                    </th>
                    <th scope="col" class="hidden xl:block px-6 py-3 whitespace-nowrap">
                        Description
                    </th>
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Price
                    </th>
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Origin
                    </th>
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Category
                    </th>
                    <th scope="col" class="px-6 py-3 whitespace-nowrap">
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                {{#each toys}}
                <tr class="border-b" id="trow_{{toyid}}">
                    <th scope="row" class="px-6 py-4 font-medium text-white whitespace-nowrap">
                        {{toyname}}
                    </th>
                    <td class="px-6 py-4 hidden xl:block">
                        {{description}}
                    </td>
                    <td class="px-6 py-4">
                        ${{price}}
                    </td>
                    <td class="px-6 py-4">
                        {{origin}}
                    </td>
                    <td class="px-6 py-4">
                        {{categoryname}}
                    </td>
                    <td class="px-6 py-4">
                        <div class=" flex gap-2">
                            <label for="upsertForm" id="btnUpdateToy" data-id="{{toyid}}" class="text-blue-300 hover:underline hover:cursor-pointer">Update</label>
                            <p>|</p>
                            <a id="btnDeleteToy" data-id="{{toyid}}" class="text-red-500 hover:underline hover:cursor-pointer">Delete</a>
                        </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

    <input type="checkbox" id="upsertForm" class="checkbox-upsertForm" hidden>
    <label for="upsertForm" class="nav__overlay"></label>
    <label for="upsertForm" hidden class="upsertLayout w-full h-full overflow-y-auto top-0 left-0 fixed bg-[#00000082]">
        <div class="my-32">
            <p class="text-3xl font-semibold text-MyYellow w-fit mb-7 mx-auto">TOY FORM</p>
            <form action="" id="toyForm" class="flex flex-col gap-4 w-5/6 md:w-1/2 xl:w-1/3 mx-auto">
                <input type="text" hidden id="inputToyId" name="toyid">
                <div class="flex flex-col gap-2 w-full">
                    <label for="">Name</label>
                    <input id="inputToyName" type="text" name="toyname" class="h-12 py-3 px-4 rounded-sm outline-none text-MyBlack">
                </div>
                <div class="flex flex-col gap-2 w-full">
                    <label for="">Description</label>
                    <textarea id="inputToyDescription" name="description" id="" rows="5" class="py-3 px-4 rounded-sm outline-none text-MyBlack"></textarea>
                </div>
                <div class="flex flex-col gap-2 w-full">
                    <label for="">Price</label>
                    <input id="inputToyPrice" type="number" name="price" min="0" class="outline-none py-3 px-4 text-MyBlack rounded-sm">
                </div>
                <div class="flex flex-col gap-2 w-full">
                    <label for="">Origin</label>
                    <input id="inputToyOrigin" type="text" name="origin" class="h-12 py-3 px-4 rounded-sm outline-none text-MyBlack">
                </div>
                <div class="flex flex-col gap-2 w-full">
                    <label for="">Category</label>
                    <div class="bg-white px-4 rounded-sm">
                        <select name="category_id" id="inputToyCategory" class="py-3 outline-none text-MyBlack w-full">
                            {{#each categories}}
                            <option value="{{categoryid}}">{{categoryname}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
                <div class="mt-5">
                    <img id="inputToyImg" src="" alt="" class="w-full h-[220px] rounded object-cover">
                </div>
                <div class="flex gap-4 mt-10 w-fit mx-auto">
                    <input type="file" hidden id="fileChosen" name="image" accept="image/*"> 
                    <label for="fileChosen" class="py-2 px-5 text-sm border border-MyYellow rounded hover:bg-MyYellow hover:text-MyBlack">Chọn ảnh</label>
                    <input type="submit" value="Update" class="py-2 px-5 text-sm border border-MyYellow rounded hover:bg-MyYellow hover:text-MyBlack">
                </div>
            </form>
        </div>
    </label>



</div>


<script src="/javascripts/toy.js"></script>


